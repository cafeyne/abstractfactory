public abstract class Carro {
    protected String tipo;
    
    public Carro(String tipo) {
        this.tipo = tipo;
    }

    public abstract void exibirDetalhes();
}

public class CarroEsportivo extends Carro {
    public CarroEsportivo() {
        super("Esportivo");
    }

    public void exibirDetalhes() {
        System.out.println("Carro Esportivo com motor V8 e design aerodinâmico.");
    }
}

public class CarroLuxuoso extends Carro {
    public CarroLuxuoso() {
        super("Luxuoso");
    }

    public void exibirDetalhes() {
        System.out.println("Carro Luxuoso com interior de couro e tecnologia avançada.");
    }
}

public class CarroEsportivo extends Carro {
    public CarroEsportivo() {
        super("Esportivo");
    }

    public void exibirDetalhes() {
        System.out.println("Carro Esportivo com motor V8 e design aerodinâmico.");
    }
}

public class CarroLuxuoso extends Carro {
    public CarroLuxuoso() {
        super("Luxuoso");
    }

    public void exibirDetalhes() {
        System.out.println("Carro Luxuoso com interior de couro e tecnologia avançada.");
    }
}

public abstract class Moto {
    protected String tipo;

    public Moto(String tipo) {
        this.tipo = tipo;
    }

    public abstract void exibirDetalhes();
}

public class MotoEsportiva extends Moto {
    public MotoEsportiva() {
        super("Esportiva");
    }

    public void exibirDetalhes() {
        System.out.println("Moto Esportiva com motor de alta performance e design arrojado.");
    }
}

public class MotoLuxuosa extends Moto {
    public MotoLuxuosa() {
        super("Luxuosa");
    }

    public void exibirDetalhes() {
        System.out.println("Moto Luxuosa com assento confortável e sistemas de navegação de última geração.");
    }
}

public class MotoEsportiva extends Moto {
    public MotoEsportiva() {
        super("Esportiva");
    }

    public void exibirDetalhes() {
        System.out.println("Moto Esportiva com motor de alta performance e design arrojado.");
    }
}

public class MotoLuxuosa extends Moto {
    public MotoLuxuosa() {
        super("Luxuosa");
    }

    public void exibirDetalhes() {
        System.out.println("Moto Luxuosa com assento confortável e sistemas de navegação de última geração.");
    }
}

public abstract class VeiculoFactory {
    public abstract Carro criarCarro();
    public abstract Moto criarMoto();

    public static VeiculoFactory getFactory(String tipo) {
        if (tipo.equals("esportivo")) {
            return new EsportivoVeiculoFactory();
        } else if (tipo.equals("luxuoso")) {
            return new LuxuosoVeiculoFactory();
        }
        return null;
    }
}

public class EsportivoVeiculoFactory extends VeiculoFactory {
    public Carro criarCarro() {
        return new CarroEsportivo();
    }

    public Moto criarMoto() {
        return new MotoEsportiva();
    }
}

public class LuxuosoVeiculoFactory extends VeiculoFactory {
    public Carro criarCarro() {
        return new CarroLuxuoso();
    }

    public Moto criarMoto() {
        return new MotoLuxuosa();
    }
}

public class Main {
    public static void main(String[] args) {
        VeiculoFactory fabrica;

        fabrica = VeiculoFactory.getFactory("esportivo");
        Carro carroEsportivo = fabrica.criarCarro();
        Moto motoEsportiva = fabrica.criarMoto();

        carroEsportivo.exibirDetalhes();
        motoEsportiva.exibirDetalhes();

        fabrica = VeiculoFactory.getFactory("luxuoso");
        Carro carroLuxuoso = fabrica.criarCarro();
        Moto motoLuxuosa = fabrica.criarMoto();

        carroLuxuoso.exibirDetalhes();
        motoLuxuosa.exibirDetalhes();  
    }
}
